{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://software-factory-agents/contracts/agents/design_brief_agent.input.schema.json",
  "title": "design_brief_agent Input",
  "type": "object",
  "additionalProperties": false,
  "required": ["job", "payload"],
  "properties": {
    "job": {
      "$ref": "../common/job_envelope.schema.json"
    },
    "payload": {
      "type": "object",
      "additionalProperties": false,
      "required": ["project_summary", "inspirations", "brand_pack"],
      "properties": {
        "project_summary": { "type": "string", "minLength": 1 },
        "inspirations": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["type", "comment"],
            "properties": {
              "type": {
                "type": "string",
                "enum": ["link", "image", "comment"]
              },
              "value": { "type": "string" },
              "comment": { "type": "string", "minLength": 1 }
            },
            "allOf": [
              {
                "if": {
                  "properties": { "type": { "const": "comment" } },
                  "required": ["type"]
                },
                "then": {
                  "properties": {
                    "value": { "maxLength": 0 }
                  }
                }
              },
              {
                "if": {
                  "properties": { "type": { "enum": ["link", "image"] } },
                  "required": ["type"]
                },
                "then": {
                  "required": ["value"],
                  "properties": {
                    "value": { "minLength": 1 }
                  }
                }
              }
            ]
          }
        },
        "brand_pack": {
          "type": "object",
          "additionalProperties": false,
          "required": ["brand_guidelines", "logos"],
          "properties": {
            "brand_guidelines": {
              "type": "array",
              "minItems": 1,
              "items": { "type": "string", "minLength": 1 }
            },
            "logos": {
              "type": "array",
              "minItems": 1,
              "items": { "type": "string", "minLength": 1 }
            },
            "approved_colors": {
              "type": "array",
              "items": { "type": "string", "pattern": "^#([A-Fa-f0-9]{6}|[A-Fa-f0-9]{3})$" }
            },
            "approved_fonts": {
              "type": "array",
              "items": { "type": "string", "minLength": 1 }
            },
            "icon_library": { "type": "string" }
          }
        },
        "existing_design_files": {
          "type": "array",
          "items": { "type": "string", "minLength": 1 }
        },
        "content_assets": {
          "type": "array",
          "items": { "type": "string", "minLength": 1 }
        },
        "copy_assets": {
          "type": "array",
          "items": { "type": "string", "minLength": 1 }
        },
        "product_surface": {
          "type": "array",
          "items": { "type": "string", "enum": ["web", "mobile", "dashboard", "marketing_site", "other"] }
        },
        "accessibility_target": {
          "type": "string",
          "enum": ["wcag_2_1_aa", "wcag_2_2_aa", "none_specified"]
        },
        "technical_constraints": {
          "type": "array",
          "items": { "type": "string", "minLength": 1 }
        },
        "competitor_refs": {
          "type": "array",
          "items": { "type": "string", "minLength": 1 }
        },
        "must_reuse_components": {
          "type": "array",
          "items": { "type": "string", "minLength": 1 }
        },
        "legal_restrictions": {
          "type": "array",
          "items": { "type": "string", "minLength": 1 }
        },
        "brand_notes": {
          "type": "array",
          "items": { "type": "string", "minLength": 1 }
        },
        "required_screens": {
          "type": "array",
          "items": { "type": "string", "minLength": 1 }
        }
      }
    }
  }
}
