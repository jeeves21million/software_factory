{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://software-factory-agents/contracts/agents/design_brief_agent.output.schema.json",
  "title": "design_brief_agent Output",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "status",
    "artifacts",
    "payload",
    "handoff"
  ],
  "properties": {
    "status": {
      "type": "string",
      "enum": [
        "success",
        "failed"
      ]
    },
    "summary": {
      "type": "string"
    },
    "artifacts": {
      "type": "array",
      "items": {
        "$ref": "../common/artifact_metadata.schema.json"
      }
    },
    "payload": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "design_brief",
        "inspirations",
        "quality_targets"
      ],
      "properties": {
        "design_brief": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "overview",
            "design_direction",
            "content_strategy",
            "interaction_principles",
            "required_screens"
          ],
          "properties": {
            "overview": {
              "type": "string",
              "minLength": 1
            },
            "design_direction": {
              "type": "array",
              "minItems": 3,
              "items": {
                "type": "string",
                "minLength": 1
              }
            },
            "content_strategy": {
              "type": "array",
              "minItems": 2,
              "items": {
                "type": "string",
                "minLength": 1
              }
            },
            "interaction_principles": {
              "type": "array",
              "minItems": 3,
              "items": {
                "type": "string",
                "minLength": 1
              }
            },
            "required_screens": {
              "type": "array",
              "minItems": 1,
              "uniqueItems": true,
              "items": {
                "type": "object",
                "additionalProperties": false,
                "required": [
                  "id",
                  "name",
                  "purpose",
                  "priority",
                  "platforms",
                  "key_states"
                ],
                "properties": {
                  "id": {
                    "type": "string",
                    "pattern": "^[a-z0-9]+(?:-[a-z0-9]+)*$"
                  },
                  "name": {
                    "type": "string",
                    "minLength": 1
                  },
                  "purpose": {
                    "type": "string",
                    "minLength": 1
                  },
                  "priority": {
                    "type": "string",
                    "enum": ["critical", "high", "medium", "low"]
                  },
                  "platforms": {
                    "type": "array",
                    "minItems": 1,
                    "items": {
                      "type": "string",
                      "enum": ["desktop", "mobile"]
                    },
                    "allOf": [
                      { "contains": { "const": "desktop" } },
                      { "contains": { "const": "mobile" } }
                    ]
                  },
                  "key_states": {
                    "type": "array",
                    "items": {
                      "type": "string",
                      "enum": ["default", "loading", "empty", "error", "success"]
                    },
                    "allOf": [
                      { "contains": { "const": "default" } }
                    ]
                  }
                }
              }
            }
          }
        },
        "inspirations": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": [
              "type",
              "comment"
            ],
            "properties": {
              "type": {
                "type": "string",
                "enum": [
                  "link",
                  "image",
                  "comment"
                ]
              },
              "value": {
                "type": "string"
              },
              "comment": {
                "type": "string",
                "minLength": 1
              }
            }
          }
        },
        "quality_targets": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "quality_tier",
            "target_emotional_response",
            "differentiation_statement"
          ],
          "properties": {
            "quality_tier": {
              "type": "string",
              "const": "premium"
            },
            "target_emotional_response": {
              "type": "array",
              "minItems": 2,
              "items": {
                "type": "string",
                "minLength": 1
              }
            },
            "differentiation_statement": {
              "type": "string",
              "minLength": 1
            }
          }
        }
      }
    },
    "handoff": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "next_stage",
        "next_agent",
        "payload"
      ],
      "properties": {
        "next_stage": {
          "type": "string",
          "const": "design"
        },
        "next_agent": {
          "type": "string",
          "const": "ui_design_agent"
        },
        "payload": {
          "type": "object",
          "required": [
            "design_brief",
            "inspirations",
            "quality_targets"
          ],
          "properties": {
            "design_brief": {
              "$ref": "#/properties/payload/properties/design_brief"
            },
            "inspirations": {
              "$ref": "#/properties/payload/properties/inspirations"
            },
            "quality_targets": {
              "$ref": "#/properties/payload/properties/quality_targets"
            }
          }
        }
      }
    },
    "failure": {
      "$ref": "../common/failure.schema.json"
    }
  },
  "allOf": [
    {
      "if": {
        "properties": {
          "status": {
            "const": "failed"
          }
        },
        "required": [
          "status"
        ]
      },
      "then": {
        "required": [
          "failure"
        ]
      }
    }
  ]
}
