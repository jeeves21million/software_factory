{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://software-factory-agents/contracts/agents/api_contract_agent.input.schema.json",
  "title": "api_contract_agent Input",
  "type": "object",
  "additionalProperties": false,
  "required": ["job", "payload"],
  "properties": {
    "job": {
      "$ref": "../common/job_envelope.schema.json"
    },
    "payload": {
      "type": "object",
      "additionalProperties": false,
      "required": ["requirements", "domain_entities", "proposed_endpoints"],
      "properties": {
        "requirements": {
          "type": "array",
          "minItems": 1,
          "items": { "type": "string", "minLength": 1 }
        },
        "domain_entities": {
          "type": "array",
          "minItems": 1,
          "items": { "type": "string", "minLength": 1 }
        },
        "proposed_endpoints": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["method", "path", "purpose"],
            "properties": {
              "method": {
                "type": "string",
                "enum": ["GET", "POST", "PUT", "PATCH", "DELETE"]
              },
              "path": { "type": "string", "pattern": "^/" },
              "purpose": { "type": "string", "minLength": 1 }
            }
          }
        },
        "auth_constraints": {
          "type": "array",
          "items": { "type": "string", "minLength": 1 }
        }
      }
    }
  }
}
