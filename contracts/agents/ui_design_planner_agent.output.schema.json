{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://software-factory-agents/contracts/agents/ui_design_planner_agent.output.schema.json",
  "title": "ui_design_planner_agent Output",
  "type": "object",
  "additionalProperties": false,
  "required": ["status", "artifacts", "payload", "handoff"],
  "properties": {
    "status": { "type": "string", "enum": ["success", "failed"] },
    "summary": { "type": "string" },
    "artifacts": {
      "type": "array",
      "items": {
        "anyOf": [
          { "$ref": "../common/artifact_metadata.schema.json" },
          {
            "type": "object",
            "additionalProperties": true,
            "required": ["artifact_id", "job_id", "stage", "agent", "kind", "uri", "sha256", "created_at"],
            "properties": {
              "artifact_id": { "type": "string", "minLength": 1 },
              "job_id": { "type": "string", "minLength": 1 },
              "stage": { "type": "string", "const": "design_plan" },
              "agent": { "type": "string", "const": "ui_design_planner_agent" },
              "kind": { "type": "string", "minLength": 1 },
              "uri": { "type": "string", "minLength": 1 },
              "sha256": {
                "type": "string",
                "anyOf": [
                  { "pattern": "^[a-fA-F0-9]{64}$" },
                  { "const": "pending" }
                ]
              },
              "created_at": { "type": "string", "minLength": 1 }
            }
          }
        ]
      }
    },
    "payload": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "plan_version",
        "objectives",
        "workstreams",
        "execution_order",
        "screen_batches",
        "quality_gates",
        "risks",
        "assumptions",
        "approval"
      ],
      "properties": {
        "plan_version": { "type": "string", "minLength": 1 },
        "objectives": {
          "type": "array",
          "minItems": 3,
          "items": { "type": "string", "minLength": 1 }
        },
        "workstreams": {
          "type": "array",
          "minItems": 3,
          "items": {
            "type": "object",
            "additionalProperties": true,
            "required": ["id", "name", "description", "deliverables"],
            "properties": {
              "id": { "type": "string", "pattern": "^ws-[a-z0-9-]+$" },
              "name": { "type": "string", "minLength": 1 },
              "description": { "type": "string", "minLength": 1 },
              "deliverables": {
                "type": "array",
                "minItems": 1,
                "items": { "type": "string", "minLength": 1 }
              },
              "responsive_strategy": { "type": "string" },
              "depends_on": {
                "type": "array",
                "items": { "type": "string", "pattern": "^ws-[a-z0-9-]+$" }
              },
              "estimated_screens": { "type": "integer", "minimum": 0 }
            }
          }
        },
        "execution_order": {
          "type": "array",
          "minItems": 3,
          "items": {
            "anyOf": [
              { "type": "string", "pattern": "^ws-[a-z0-9-]+$" },
              {
                "type": "object",
                "additionalProperties": true,
                "required": ["phase", "workstream_ids", "rationale", "gate"],
                "properties": {
                  "phase": { "type": "integer", "minimum": 1 },
                  "workstream_ids": {
                    "type": "array",
                    "minItems": 1,
                    "items": { "type": "string", "pattern": "^ws-[a-z0-9-]+$" }
                  },
                  "rationale": { "type": "string", "minLength": 1 },
                  "gate": { "type": "string", "minLength": 1 }
                }
              }
            ]
          }
        },
        "screen_batches": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "additionalProperties": true,
            "required": ["batch_id"],
            "properties": {
              "batch_id": { "type": "string", "pattern": "^batch-[0-9]+(?:-[a-z0-9-]+)?$" },
              "screen_ids": {
                "type": "array",
                "minItems": 1,
                "items": { "type": "string", "pattern": "^[a-z0-9]+(?:-[a-z0-9]+)*$" }
              },
              "screens": {
                "type": "array",
                "items": {
                  "anyOf": [
                    { "type": "string", "pattern": "^[a-z0-9]+(?:-[a-z0-9]+)*$" },
                    {
                      "type": "object",
                      "additionalProperties": true,
                      "required": ["id"],
                      "properties": {
                        "id": { "type": "string", "pattern": "^[a-z0-9]+(?:-[a-z0-9]+)*$" }
                      }
                    }
                  ]
                }
              },
              "phase": { "type": "integer", "minimum": 1 },
              "description": { "type": "string", "minLength": 1 },
              "goal": { "type": "string", "minLength": 1 },
              "acceptance": {
                "type": "array",
                "minItems": 1,
                "items": { "type": "string", "minLength": 1 }
              },
              "desktop_approach": { "type": "string", "minLength": 1 },
              "mobile_approach": { "type": "string", "minLength": 1 }
            }
          }
        },
        "quality_gates": {
          "type": "array",
          "minItems": 3,
          "items": {
            "anyOf": [
              { "type": "string", "minLength": 1 },
              {
                "type": "object",
                "additionalProperties": true,
                "required": ["name", "criteria"],
                "properties": {
                  "gate_id": { "type": "string", "minLength": 1 },
                  "name": { "type": "string", "minLength": 1 },
                  "phase": { "type": "integer", "minimum": 1 },
                  "criteria": {
                    "type": "array",
                    "minItems": 1,
                    "items": { "type": "string", "minLength": 1 }
                  },
                  "blocking": { "type": "boolean" }
                }
              }
            ]
          }
        },
        "risks": {
          "type": "array",
          "items": {
            "anyOf": [
              {
                "type": "object",
                "additionalProperties": true,
                "required": ["risk", "impact", "mitigation"],
                "properties": {
                  "risk": { "type": "string", "minLength": 1 },
                  "impact": { "type": "string", "minLength": 1 },
                  "mitigation": { "type": "string", "minLength": 1 }
                }
              },
              {
                "type": "object",
                "additionalProperties": true,
                "required": ["description", "impact", "mitigation"],
                "properties": {
                  "id": { "type": "string", "minLength": 1 },
                  "description": { "type": "string", "minLength": 1 },
                  "likelihood": { "type": "string", "minLength": 1 },
                  "impact": { "type": "string", "minLength": 1 },
                  "mitigation": { "type": "string", "minLength": 1 }
                }
              }
            ]
          }
        },
        "assumptions": {
          "type": "array",
          "items": {
            "anyOf": [
              { "type": "string", "minLength": 1 },
              {
                "type": "object",
                "additionalProperties": true,
                "required": ["assumption", "rationale"],
                "properties": {
                  "id": { "type": "string", "minLength": 1 },
                  "assumption": { "type": "string", "minLength": 1 },
                  "rationale": { "type": "string", "minLength": 1 },
                  "unresolved": { "type": "boolean" }
                }
              }
            ]
          }
        },
        "approval": {
          "anyOf": [
            {
              "type": "object",
              "additionalProperties": true,
              "required": ["recommended", "checklist"],
              "properties": {
                "recommended": { "type": "boolean" },
                "checklist": {
                  "type": "array",
                  "minItems": 1,
                  "items": { "type": "string", "minLength": 1 }
                }
              }
            },
            {
              "type": "object",
              "additionalProperties": true,
              "required": ["go_criteria", "reviewer_checklist"],
              "properties": {
                "go_criteria": {
                  "type": "array",
                  "minItems": 1,
                  "items": { "type": "string", "minLength": 1 }
                },
                "no_go_criteria": {
                  "type": "array",
                  "items": { "type": "string", "minLength": 1 }
                },
                "reviewer_checklist": {
                  "type": "array",
                  "minItems": 1,
                  "items": { "type": "string", "minLength": 1 }
                }
              }
            }
          ]
        }
      }
    },
    "handoff": {
      "type": "object",
      "additionalProperties": false,
      "required": ["next_stage", "next_agent", "payload"],
      "properties": {
        "next_stage": { "type": "string", "const": "design_plan_review" },
        "next_agent": { "type": "string", "const": "ui_design_plan_reviewer_agent" },
        "payload": {
          "type": "object",
          "additionalProperties": true,
          "anyOf": [
            { "required": ["plan_uri"] },
            { "required": ["plan_artifact_uri"] }
          ],
          "properties": {
            "plan_uri": { "type": "string", "minLength": 1 },
            "plan_artifact_uri": { "type": "string", "minLength": 1 }
          }
        }
      }
    },
    "failure": { "$ref": "../common/failure.schema.json" }
  }
}
