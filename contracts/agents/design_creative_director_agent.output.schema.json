{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://software-factory-agents/contracts/agents/design_creative_director_agent.output.schema.json",
  "title": "design_creative_director_agent Output",
  "type": "object",
  "additionalProperties": false,
  "required": ["status", "artifacts", "payload", "handoff"],
  "properties": {
    "status": { "type": "string", "enum": ["success", "failed"] },
    "summary": { "type": "string" },
    "artifacts": {
      "type": "array",
      "items": {
        "anyOf": [
          { "$ref": "../common/artifact_metadata.schema.json" },
          {
            "type": "object",
            "additionalProperties": false,
            "required": [
              "artifact_id",
              "job_id",
              "stage",
              "agent",
              "kind",
              "uri",
              "sha256",
              "created_at"
            ],
            "properties": {
              "artifact_id": { "type": "string", "minLength": 1 },
              "job_id": { "type": "string", "minLength": 1 },
              "stage": { "type": "string", "minLength": 1 },
              "agent": { "type": "string", "minLength": 1 },
              "kind": { "type": "string", "minLength": 1 },
              "uri": { "type": "string", "minLength": 1 },
              "sha256": { "type": "string", "enum": ["pending"] },
              "commit_sha": { "type": "string" },
              "created_at": { "type": "string", "format": "date-time" },
              "metadata": { "type": "object" }
            }
          }
        ]
      }
    },
    "payload": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "domain_anchor",
        "creative_direction",
        "preferred_direction",
        "anti_patterns",
        "signature_interactions"
      ],
      "properties": {
        "domain_anchor": {
          "oneOf": [
            {
              "type": "object",
              "additionalProperties": false,
              "required": ["product_domain", "source_signals"],
              "properties": {
                "product_domain": { "type": "string", "minLength": 1 },
                "source_signals": {
                  "type": "array",
                  "minItems": 2,
                  "items": { "type": "string", "minLength": 1 }
                }
              }
            },
            {
              "type": "object",
              "additionalProperties": true,
              "required": ["product", "category"],
              "properties": {
                "product": { "type": "string", "minLength": 1 },
                "category": { "type": "string", "minLength": 1 }
              }
            }
          ]
        },
        "creative_direction": {
          "oneOf": [
            {
              "type": "array",
              "minItems": 3,
              "items": {
                "type": "object",
                "additionalProperties": false,
                "required": [
                  "id",
                  "name",
                  "rationale",
                  "style_thesis",
                  "visual_signals",
                  "desktop_expression",
                  "mobile_expression",
                  "forbidden_patterns"
                ],
                "properties": {
                  "id": { "type": "string", "pattern": "^direction-[0-9]+$" },
                  "name": { "type": "string", "minLength": 1 },
                  "rationale": { "type": "string", "minLength": 1 },
                  "style_thesis": { "type": "string", "minLength": 1 },
                  "visual_signals": {
                    "type": "array",
                    "minItems": 3,
                    "items": { "type": "string", "minLength": 1 }
                  },
                  "desktop_expression": {
                    "type": "array",
                    "minItems": 2,
                    "items": { "type": "string", "minLength": 1 }
                  },
                  "mobile_expression": {
                    "type": "array",
                    "minItems": 2,
                    "items": { "type": "string", "minLength": 1 }
                  },
                  "forbidden_patterns": {
                    "type": "array",
                    "minItems": 2,
                    "items": { "type": "string", "minLength": 1 }
                  }
                }
              },
              "description": "Legacy flat creative_direction array shape"
            },
            {
              "type": "object",
              "additionalProperties": true,
              "required": ["directions"],
              "properties": {
                "directions": {
                  "type": "array",
                  "minItems": 3
                }
              }
            }
          ]
        },
        "preferred_direction": {
          "oneOf": [
            { "type": "string", "pattern": "^direction-[0-9]+$" },
            {
              "type": "object",
              "additionalProperties": true,
              "required": ["id"],
              "properties": {
                "id": { "type": "string", "pattern": "^direction-[a-z0-9-]+$" },
                "name": { "type": "string" }
              }
            }
          ]
        },
        "anti_patterns": {
          "oneOf": [
            {
              "type": "array",
              "minItems": 5,
              "items": { "type": "string", "minLength": 1 }
            },
            {
              "type": "object",
              "additionalProperties": true,
              "minProperties": 1
            }
          ]
        },
        "signature_interactions": {
          "oneOf": [
            {
              "type": "array",
              "minItems": 3,
              "items": { "type": "string", "minLength": 1 }
            },
            {
              "type": "array",
              "minItems": 3,
              "items": {
                "type": "object",
                "additionalProperties": true,
                "required": ["id", "name", "description"],
                "properties": {
                  "id": { "type": "string", "minLength": 1 },
                  "name": { "type": "string", "minLength": 1 },
                  "description": { "type": "string", "minLength": 1 }
                }
              }
            }
          ]
        }
      }
    },
    "handoff": {
      "type": "object",
      "additionalProperties": false,
      "required": ["next_stage", "next_agent", "payload"],
      "properties": {
        "next_stage": { "type": "string", "const": "design" },
        "next_agent": { "type": "string", "const": "ui_design_agent" },
        "payload": { "type": "object" }
      }
    },
    "failure": { "$ref": "../common/failure.schema.json" }
  }
}
