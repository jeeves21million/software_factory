{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://software-factory-agents/contracts/agents/ui_design_agent.output.schema.json",
  "title": "ui_design_agent Output",
  "type": "object",
  "additionalProperties": false,
  "required": ["status", "artifacts", "payload", "handoff"],
  "properties": {
    "status": { "type": "string", "enum": ["success", "failed"] },
    "summary": { "type": "string" },
    "artifacts": {
      "type": "array",
      "items": { "$ref": "../common/artifact_metadata.schema.json" }
    },
    "payload": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "spa_app_uri",
        "tech_stack",
        "design_system_uri",
        "component_registry_uri",
        "route_map_uri",
        "state_model_uri",
        "mock_data_uri",
        "interaction_scenarios_uri",
        "quality_report_uri",
        "critique_report_uri",
        "coverage_report",
        "generated_files",
        "quality_metrics"
      ],
      "properties": {
        "spa_app_uri": { "type": "string", "minLength": 1 },
        "tech_stack": {
          "type": "object",
          "additionalProperties": false,
          "required": ["framework", "language", "bundler", "styling", "router", "state_library"],
          "properties": {
            "framework": { "type": "string", "const": "react" },
            "language": { "type": "string", "const": "typescript" },
            "bundler": { "type": "string", "const": "vite" },
            "styling": { "type": "string", "const": "tailwindcss" },
            "router": { "type": "string", "const": "react-router-dom" },
            "state_library": { "type": "string", "const": "zustand" }
          }
        },
        "design_system_uri": { "type": "string", "minLength": 1 },
        "component_registry_uri": { "type": "string", "minLength": 1 },
        "route_map_uri": { "type": "string", "minLength": 1 },
        "state_model_uri": { "type": "string", "minLength": 1 },
        "mock_data_uri": { "type": "string", "minLength": 1 },
        "interaction_scenarios_uri": { "type": "string", "minLength": 1 },
        "quality_report_uri": { "type": "string", "minLength": 1 },
        "critique_report_uri": { "type": "string", "minLength": 1 },
        "quality_status": { "type": "string", "enum": ["pass", "fail"] },
        "coverage_report": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "required_screen_ids",
            "implemented_screen_ids",
            "missing_screen_ids",
            "extra_screen_ids",
            "required_viewports",
            "route_count",
            "complete"
          ],
          "properties": {
            "required_screen_ids": {
              "type": "array",
              "items": { "type": "string", "pattern": "^[a-z0-9]+(?:-[a-z0-9]+)*$" }
            },
            "implemented_screen_ids": {
              "type": "array",
              "items": { "type": "string", "pattern": "^[a-z0-9]+(?:-[a-z0-9]+)*$" }
            },
            "missing_screen_ids": {
              "type": "array",
              "items": { "type": "string", "pattern": "^[a-z0-9]+(?:-[a-z0-9]+)*$" }
            },
            "extra_screen_ids": {
              "type": "array",
              "items": { "type": "string", "pattern": "^[a-z0-9]+(?:-[a-z0-9]+)*$" }
            },
            "required_viewports": {
              "type": "array",
              "items": { "type": "string", "enum": ["desktop", "mobile"] },
              "allOf": [
                { "contains": { "const": "desktop" } },
                { "contains": { "const": "mobile" } }
              ]
            },
            "route_count": { "type": "integer", "minimum": 1 },
            "complete": { "type": "boolean" }
          }
        },
        "generated_files": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["path", "sha256", "kind"],
            "properties": {
              "kind": {
                "type": "string",
                "enum": [
                  "app_entry",
                  "route_component",
                  "ui_component",
                  "state",
                  "mock_data",
                  "style",
                  "config",
                  "manifest",
                  "report"
                ]
              },
              "path": { "type": "string", "minLength": 1 },
              "sha256": { "type": "string", "pattern": "^[a-f0-9]{64}$" }
            }
          }
        },
        "quality_metrics": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "quality_tier",
            "responsive_behavior_pass",
            "interaction_states_coverage",
            "accessibility_assertions_pass",
            "placeholder_copy_count",
            "live_api_call_count",
            "brand_token_usage_pass",
            "uniqueness_score",
            "prototype_interactivity_pass"
          ],
          "properties": {
            "quality_tier": { "type": "string", "const": "premium" },
            "responsive_behavior_pass": { "type": "boolean" },
            "interaction_states_coverage": {
              "type": "array",
              "items": { "type": "string", "enum": ["loading", "empty", "error", "success"] },
              "allOf": [
                { "contains": { "const": "loading" } },
                { "contains": { "const": "empty" } },
                { "contains": { "const": "error" } },
                { "contains": { "const": "success" } }
              ]
            },
            "accessibility_assertions_pass": { "type": "boolean" },
            "placeholder_copy_count": { "type": "integer", "minimum": 0 },
            "live_api_call_count": { "type": "integer", "minimum": 0 },
            "brand_token_usage_pass": { "type": "boolean" },
            "uniqueness_score": { "type": "number", "minimum": 0.0, "maximum": 1.0 },
            "prototype_interactivity_pass": { "type": "boolean" }
          }
        },
        "critique_result": {
          "type": "object",
          "additionalProperties": false,
          "required": ["decision", "overall_score"],
          "properties": {
            "decision": { "type": "string", "enum": ["pass", "fail"] },
            "overall_score": { "type": "number", "minimum": 0, "maximum": 100 }
          }
        }
      }
    },
    "handoff": {
      "type": "object",
      "additionalProperties": false,
      "required": ["next_stage", "next_agent", "payload"],
      "properties": {
        "next_stage": { "type": "string", "const": "implementation" },
        "next_agent": { "type": "string", "const": "frontend_dev_agent" },
        "payload": {
          "type": "object",
          "additionalProperties": true,
          "required": ["tech_stack"],
          "properties": {
            "tech_stack": {
              "type": "object",
              "additionalProperties": false,
              "required": ["framework", "language", "bundler", "styling", "router", "state_library"],
              "properties": {
                "framework": { "type": "string", "const": "react" },
                "language": { "type": "string", "const": "typescript" },
                "bundler": { "type": "string", "const": "vite" },
                "styling": { "type": "string", "const": "tailwindcss" },
                "router": { "type": "string", "const": "react-router-dom" },
                "state_library": { "type": "string", "const": "zustand" }
              }
            }
          }
        }
      }
    },
    "failure": { "$ref": "../common/failure.schema.json" }
  },
  "allOf": [
    {
      "if": {
        "properties": { "status": { "const": "failed" } },
        "required": ["status"]
      },
      "then": {
        "required": ["failure"]
      }
    },
    {
      "if": {
        "properties": { "status": { "const": "success" } },
        "required": ["status"]
      },
      "then": {
        "properties": {
          "payload": {
            "required": ["quality_status", "coverage_report", "quality_metrics"],
            "properties": {
              "quality_status": { "const": "pass" },
              "coverage_report": {
                "properties": {
                  "complete": { "const": true },
                  "missing_screen_ids": { "maxItems": 0 }
                }
              },
              "quality_metrics": {
                "properties": {
                  "responsive_behavior_pass": { "const": true },
                  "placeholder_copy_count": { "const": 0 },
                  "live_api_call_count": { "const": 0 },
                  "brand_token_usage_pass": { "const": true },
                  "uniqueness_score": { "minimum": 0.75 },
                  "accessibility_assertions_pass": { "const": true },
                  "prototype_interactivity_pass": { "const": true }
                }
              },
              "critique_result": {
                "properties": {
                  "decision": { "const": "pass" },
                  "overall_score": { "minimum": 85 }
                }
              }
            }
          }
        }
      }
    }
  ]
}
