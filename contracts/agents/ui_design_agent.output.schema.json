{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://software-factory-agents/contracts/agents/ui_design_agent.output.schema.json",
  "title": "ui_design_agent Output",
  "type": "object",
  "additionalProperties": false,
  "required": ["status", "artifacts", "payload", "handoff"],
  "properties": {
    "status": { "type": "string", "enum": ["success", "failed"] },
    "summary": { "type": "string" },
    "artifacts": {
      "type": "array",
      "items": { "$ref": "../common/artifact_metadata.schema.json" }
    },
    "payload": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "comp_set_uri",
        "token_set_uri",
        "component_spec_uri",
        "screen_spec_uri",
        "comp_manifest_uri",
        "quality_report_uri",
        "critique_report_uri",
        "coverage_report",
        "generated_files",
        "quality_metrics"
      ],
      "properties": {
        "comp_set_uri": { "type": "string", "minLength": 1 },
        "token_set_uri": { "type": "string", "minLength": 1 },
        "component_spec_uri": { "type": "string", "minLength": 1 },
        "screen_spec_uri": { "type": "string", "minLength": 1 },
        "comp_manifest_uri": { "type": "string", "minLength": 1 },
        "quality_report_uri": { "type": "string", "minLength": 1 },
        "critique_report_uri": { "type": "string", "minLength": 1 },
        "quality_status": { "type": "string", "enum": ["pass", "fail"] },
        "coverage_report": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "required_screen_ids",
            "generated_screen_ids",
            "missing_screen_ids",
            "extra_screen_ids",
            "variants",
            "complete"
          ],
          "properties": {
            "required_screen_ids": {
              "type": "array",
              "items": { "type": "string", "pattern": "^[a-z0-9]+(?:-[a-z0-9]+)*$" }
            },
            "generated_screen_ids": {
              "type": "array",
              "items": { "type": "string", "pattern": "^[a-z0-9]+(?:-[a-z0-9]+)*$" }
            },
            "missing_screen_ids": {
              "type": "array",
              "items": { "type": "string", "pattern": "^[a-z0-9]+(?:-[a-z0-9]+)*$" }
            },
            "extra_screen_ids": {
              "type": "array",
              "items": { "type": "string", "pattern": "^[a-z0-9]+(?:-[a-z0-9]+)*$" }
            },
            "variants": {
              "type": "array",
              "items": { "type": "string", "enum": ["desktop", "mobile"] },
              "allOf": [
                { "contains": { "const": "desktop" } },
                { "contains": { "const": "mobile" } }
              ]
            },
            "complete": { "type": "boolean" }
          }
        },
        "generated_files": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["screen_id", "variant", "path", "sha256"],
            "properties": {
              "screen_id": { "type": "string", "pattern": "^[a-z0-9]+(?:-[a-z0-9]+)*$" },
              "variant": { "type": "string", "enum": ["desktop", "mobile"] },
              "path": { "type": "string", "pattern": "^comps\\/(desktop|mobile)\\/[a-z0-9]+(?:-[a-z0-9]+)*\\.html$" },
              "sha256": { "type": "string", "pattern": "^[a-f0-9]{64}$" }
            }
          }
        },
        "quality_metrics": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "quality_tier",
            "has_visual_direction_statement",
            "mobile_layouts_distinct",
            "desktop_label_in_mobile_count",
            "fixed_viewport_width_count",
            "external_cdn_asset_count",
            "placeholder_copy_count",
            "uniqueness_score",
            "brand_token_usage_pass",
            "interaction_states_coverage",
            "accessibility_assertions_pass"
          ],
          "properties": {
            "quality_tier": { "type": "string", "const": "premium" },
            "has_visual_direction_statement": { "type": "boolean" },
            "mobile_layouts_distinct": { "type": "boolean" },
            "desktop_label_in_mobile_count": { "type": "integer", "minimum": 0 },
            "fixed_viewport_width_count": { "type": "integer", "minimum": 0 },
            "external_cdn_asset_count": { "type": "integer", "minimum": 0 },
            "placeholder_copy_count": { "type": "integer", "minimum": 0 },
            "uniqueness_score": { "type": "number", "minimum": 0.0, "maximum": 1.0 },
            "brand_token_usage_pass": { "type": "boolean" },
            "interaction_states_coverage": {
              "type": "array",
              "items": { "type": "string", "enum": ["loading", "empty", "error", "success"] },
              "allOf": [
                { "contains": { "const": "loading" } },
                { "contains": { "const": "empty" } },
                { "contains": { "const": "error" } },
                { "contains": { "const": "success" } }
              ]
            },
            "accessibility_assertions_pass": { "type": "boolean" }
          }
        },
        "critique_result": {
          "type": "object",
          "additionalProperties": false,
          "required": ["decision", "overall_score"],
          "properties": {
            "decision": { "type": "string", "enum": ["pass", "fail"] },
            "overall_score": { "type": "number", "minimum": 0, "maximum": 100 }
          }
        },
        "key_screen_options": {
          "type": "array",
          "minItems": 3,
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["screen_id", "option_id", "desktop_path", "mobile_path", "rationale"],
            "properties": {
              "screen_id": { "type": "string", "pattern": "^[a-z0-9]+(?:-[a-z0-9]+)*$" },
              "option_id": { "type": "string", "pattern": "^option-[0-9]+$" },
              "desktop_path": { "type": "string", "pattern": "^comps\\/desktop\\/[a-z0-9]+(?:-[a-z0-9]+)*--option-[0-9]+\\.html$" },
              "mobile_path": { "type": "string", "pattern": "^comps\\/mobile\\/[a-z0-9]+(?:-[a-z0-9]+)*--option-[0-9]+\\.html$" },
              "rationale": { "type": "string", "minLength": 1 }
            }
          }
        }
      }
    },
    "handoff": {
      "type": "object",
      "additionalProperties": false,
      "required": ["next_stage", "next_agent", "payload"],
      "properties": {
        "next_stage": { "type": "string", "const": "implementation" },
        "next_agent": { "type": "string", "const": "frontend_dev_agent" },
        "payload": { "type": "object" }
      }
    },
    "failure": { "$ref": "../common/failure.schema.json" }
  },
  "allOf": [
    {
      "if": {
        "properties": { "status": { "const": "failed" } },
        "required": ["status"]
      },
      "then": {
        "required": ["failure"]
      }
    },
    {
      "if": {
        "properties": { "status": { "const": "success" } },
        "required": ["status"]
      },
      "then": {
        "properties": {
          "payload": {
            "required": ["quality_status", "coverage_report", "quality_metrics", "critique_result"],
            "properties": {
              "quality_status": { "const": "pass" },
              "coverage_report": {
                "properties": {
                  "complete": { "const": true },
                  "missing_screen_ids": { "maxItems": 0 }
                }
              },
              "quality_metrics": {
                "properties": {
                  "has_visual_direction_statement": { "const": true },
                  "mobile_layouts_distinct": { "const": true },
                  "desktop_label_in_mobile_count": { "const": 0 },
                  "fixed_viewport_width_count": { "const": 0 },
                  "external_cdn_asset_count": { "const": 0 },
                  "placeholder_copy_count": { "const": 0 },
                  "uniqueness_score": { "minimum": 0.75 },
                  "brand_token_usage_pass": { "const": true },
                  "accessibility_assertions_pass": { "const": true }
                }
              },
              "critique_result": {
                "properties": {
                  "decision": { "const": "pass" },
                  "overall_score": { "minimum": 85 }
                }
              }
            }
          }
        }
      }
    }
  ]
}
