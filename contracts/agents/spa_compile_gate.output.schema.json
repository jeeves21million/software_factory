{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://software-factory-agents/contracts/agents/spa_compile_gate.output.schema.json",
  "title": "spa_compile_gate Output",
  "type": "object",
  "additionalProperties": false,
  "required": ["status", "payload", "handoff"],
  "properties": {
    "status": {
      "type": "string",
      "enum": ["success", "failed"]
    },
    "payload": {
      "type": "object",
      "additionalProperties": false,
      "required": ["build_ok", "commands"],
      "properties": {
        "build_ok": { "type": "boolean" },
        "commands": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["command", "args", "cwd", "exit_code", "duration_ms", "stdout_tail", "stderr_tail"],
            "properties": {
              "command": { "type": "string", "minLength": 1 },
              "args": {
                "type": "array",
                "items": { "type": "string" }
              },
              "cwd": { "type": "string", "minLength": 1 },
              "exit_code": { "type": "integer", "minimum": 0 },
              "duration_ms": { "type": "integer", "minimum": 0 },
              "stdout_tail": { "type": "string" },
              "stderr_tail": { "type": "string" }
            }
          }
        },
        "error_summary": { "type": "string" }
      }
    },
    "handoff": {
      "type": "object",
      "additionalProperties": false,
      "required": ["next_stage", "next_agent", "payload"],
      "properties": {
        "next_stage": { "type": "string", "const": "implementation" },
        "next_agent": { "type": "string", "const": "frontend_dev_agent" },
        "payload": {
          "type": "object",
          "additionalProperties": false,
          "required": ["spa_dir"],
          "properties": {
            "spa_dir": { "type": "string", "minLength": 1 }
          }
        }
      }
    }
  },
  "allOf": [
    {
      "if": {
        "properties": { "status": { "const": "success" } },
        "required": ["status"]
      },
      "then": {
        "properties": {
          "payload": {
            "properties": {
              "build_ok": { "const": true }
            }
          }
        }
      }
    },
    {
      "if": {
        "properties": { "status": { "const": "failed" } },
        "required": ["status"]
      },
      "then": {
        "properties": {
          "payload": {
            "required": ["error_summary"],
            "properties": {
              "build_ok": { "const": false }
            }
          }
        }
      }
    }
  ]
}
