{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://software-factory-agents/contracts/agents/api_contract_agent.output.schema.json",
  "title": "api_contract_agent Output",
  "type": "object",
  "additionalProperties": false,
  "required": ["status", "artifacts", "payload", "handoff"],
  "properties": {
    "status": {
      "type": "string",
      "enum": ["success", "failed"]
    },
    "summary": {
      "type": "string"
    },
    "artifacts": {
      "type": "array",
      "items": {
        "$ref": "../common/artifact_metadata.schema.json"
      }
    },
    "payload": {
      "type": "object",
      "additionalProperties": false,
      "required": ["contract_format", "contract_uri", "version", "endpoints", "error_model"],
      "properties": {
        "contract_format": {
          "type": "string",
          "enum": ["openapi", "asyncapi"]
        },
        "contract_uri": { "type": "string", "minLength": 1 },
        "version": { "type": "string", "minLength": 1 },
        "endpoints": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["method", "path", "operation_id"],
            "properties": {
              "method": { "type": "string", "minLength": 1 },
              "path": { "type": "string", "minLength": 1 },
              "operation_id": { "type": "string", "minLength": 1 }
            }
          }
        },
        "error_model": {
          "type": "object",
          "additionalProperties": false,
          "required": ["format", "codes"],
          "properties": {
            "format": { "type": "string", "minLength": 1 },
            "codes": {
              "type": "array",
              "items": { "type": "string", "minLength": 1 }
            }
          }
        }
      }
    },
    "handoff": {
      "type": "object",
      "additionalProperties": false,
      "required": ["next_stage", "next_agent", "payload"],
      "properties": {
        "next_stage": { "type": "string", "const": "implementation" },
        "next_agent": { "type": "string", "const": "backend_dev_agent" },
        "payload": {
          "type": "object",
          "required": ["contract_uri", "version"],
          "properties": {
            "contract_uri": { "type": "string", "minLength": 1 },
            "version": { "type": "string", "minLength": 1 }
          }
        }
      }
    },
    "failure": {
      "$ref": "../common/failure.schema.json"
    }
  },
  "allOf": [
    {
      "if": {
        "properties": { "status": { "const": "failed" } },
        "required": ["status"]
      },
      "then": {
        "required": ["failure"]
      }
    }
  ]
}
