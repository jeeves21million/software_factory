{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://software-factory-agents/contracts/agents/intake_agent.output.schema.json",
  "title": "intake_agent Output",
  "type": "object",
  "additionalProperties": false,
  "required": ["status", "artifacts", "payload", "handoff"],
  "properties": {
    "status": {
      "type": "string",
      "enum": ["success", "failed"]
    },
    "summary": {
      "type": "string"
    },
    "artifacts": {
      "type": "array",
      "items": {
        "$ref": "../common/artifact_metadata.schema.json"
      }
    },
    "payload": {
      "type": "object",
      "additionalProperties": false,
      "required": ["requirements", "assumptions", "open_questions", "acceptance_criteria"],
      "properties": {
        "requirements": {
          "type": "array",
          "minItems": 1,
          "items": { "type": "string", "minLength": 1 }
        },
        "assumptions": {
          "type": "array",
          "items": { "type": "string", "minLength": 1 }
        },
        "open_questions": {
          "type": "array",
          "items": { "type": "string", "minLength": 1 }
        },
        "acceptance_criteria": {
          "type": "array",
          "minItems": 1,
          "items": { "type": "string", "minLength": 1 }
        }
      }
    },
    "handoff": {
      "type": "object",
      "additionalProperties": false,
      "required": ["next_stage", "next_agent", "payload"],
      "properties": {
        "next_stage": { "type": "string", "const": "architecture" },
        "next_agent": { "type": "string", "const": "solution_arch_agent" },
        "payload": {
          "type": "object",
          "required": ["requirements", "acceptance_criteria"],
          "properties": {
            "requirements": {
              "type": "array",
              "items": { "type": "string", "minLength": 1 }
            },
            "acceptance_criteria": {
              "type": "array",
              "items": { "type": "string", "minLength": 1 }
            }
          }
        }
      }
    },
    "failure": {
      "$ref": "../common/failure.schema.json"
    }
  },
  "allOf": [
    {
      "if": {
        "properties": { "status": { "const": "failed" } },
        "required": ["status"]
      },
      "then": {
        "required": ["failure"]
      }
    }
  ]
}
