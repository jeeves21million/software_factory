{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://software-factory-agents/contracts/agents/ui_research_agent.output.schema.json",
  "title": "ui_research_agent Output",
  "type": "object",
  "additionalProperties": false,
  "required": ["status", "artifacts", "payload", "handoff"],
  "properties": {
    "status": { "type": "string", "enum": ["success", "failed"] },
    "summary": { "type": "string" },
    "artifacts": {
      "type": "array",
      "items": { "$ref": "../common/artifact_metadata.schema.json" }
    },
    "payload": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "similar_products",
        "common_flows",
        "inspirations",
        "differentiation_thesis",
        "creative_opportunity_map",
        "anti_patterns",
        "signature_interaction_candidates"
      ],
      "properties": {
        "similar_products": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["name", "link", "note", "what_to_adapt", "what_to_avoid"],
            "properties": {
              "name": { "type": "string", "minLength": 1 },
              "link": { "type": "string", "minLength": 1 },
              "note": { "type": "string", "minLength": 1 },
              "what_to_adapt": { "type": "string", "minLength": 1 },
              "what_to_avoid": { "type": "string", "minLength": 1 }
            }
          }
        },
        "common_flows": {
          "type": "array",
          "items": { "type": "string", "minLength": 1 }
        },
        "inspirations": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["type", "comment"],
            "properties": {
              "type": { "type": "string", "enum": ["link", "image", "comment"] },
              "value": { "type": "string" },
              "comment": { "type": "string", "minLength": 1 }
            }
          }
        },
        "differentiation_thesis": {
          "type": "string",
          "minLength": 1
        },
        "creative_opportunity_map": {
          "type": "array",
          "minItems": 3,
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["opportunity", "why_now", "execution_signal", "risk"],
            "properties": {
              "opportunity": { "type": "string", "minLength": 1 },
              "why_now": { "type": "string", "minLength": 1 },
              "execution_signal": { "type": "string", "minLength": 1 },
              "risk": { "type": "string", "minLength": 1 }
            }
          }
        },
        "anti_patterns": {
          "type": "array",
          "minItems": 3,
          "items": { "type": "string", "minLength": 1 }
        },
        "signature_interaction_candidates": {
          "type": "array",
          "minItems": 2,
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["name", "description", "applicability"],
            "properties": {
              "name": { "type": "string", "minLength": 1 },
              "description": { "type": "string", "minLength": 1 },
              "applicability": { "type": "string", "minLength": 1 }
            }
          }
        }
      }
    },
    "handoff": {
      "type": "object",
      "additionalProperties": false,
      "required": ["next_stage", "next_agent", "payload"],
      "properties": {
        "next_stage": { "type": "string", "const": "design_brief" },
        "next_agent": { "type": "string", "const": "design_brief_agent" },
        "payload": { "type": "object" }
      }
    },
    "failure": { "$ref": "../common/failure.schema.json" }
  },
  "allOf": [
    {
      "if": {
        "properties": { "status": { "const": "failed" } },
        "required": ["status"]
      },
      "then": {
        "required": ["failure"]
      }
    }
  ]
}
